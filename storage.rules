rules_version = '2';

// Digital Maturity Assessment - Survey Storage Rules
// Allow public read/write access to survey files for MVP
// TODO: Restrict writes with authentication when app scales
service firebase.storage {
  match /b/{bucket}/o {
    // Survey files: /surveys/{surveyId}
    match /surveys/{surveyId} {
      allow read, write: if true;
    }
    
    // Test files: /test/{anything}
    match /test/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Block everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
